/**
 * User管理的js脚本
 */
$(function(){
	$("#userList").datagrid({
		title : "用户列表",
		iconCls : "icon-search",
		url : "sys/user_list.action",
		fitColumns:true, //列填充满表格
		pagination : true,
		pageList : [5,10,15,20],
		pageSize : 5,
		rownumbers : true, //是否显示行号
		striped : true,
		showHeader:true,
		idField:"userId",
		columns : [[
		            {field:'hello', checkbox:true},
		            {field:"userId", title:"编号", width:10},
		            {field:"userUsername", title:"账号", width:30},
		            {field:"userPassword", title:"密码", width:30},
		            {field:"userPhoto", title:"手机号", width:30},
		            {field:"userMiaoshu", title:"描述", width:30},
		            {field:"role.roleName",title:'角色',width:30,formatter:function(value,row,index){
		            	if(row.role){
		            		return row.role.roleName;
		            	}
		            }}
		]],
		loadFilter : function(data){
			var d = {total:0, rows:[]};
			d.total = data.total;
			d.rows = data.userList;
			return d;
		},
		toolbar:[{
			iconCls:"icon-add",
			text : "添加",
			handler:function(){
				addUser();
			}
		},{
			iconCls:"icon-edit",
			text : "编辑",
			handler:function(){
				editUser();
			}
		},{
			iconCls:"icon-remove",
			text : "删除",
			handler:function(){
				deleteUser();
			}
		}]
	});
})

/**
 * 设置查询条件
 */
function setUserCondtion(){
	$("#userList").datagrid("reload",{
		
	});
}

/**
 * 重置条件
 */
function resetUserCondition(){
	$("#userconditionForm").form("clear");
}

function editUser(){
	//获取选中的行，只要第一次
	var selRow = $("#userList").datagrid("getSelected");
	if(selRow == null){
		$.messager.alert("提示","必须选择要编辑的数据","warning");
		return;
	}
	//去掉其他的选中行
	$("#userList").datagrid("clearSelections");
	// 调用这个方法必须配置idField属性
	$("#userList").datagrid("selectRecord",selRow.userId);
	
	
	
	var d = $("<div></div>").appendTo("body");
	d.dialog({
		title : "编辑用户",
		iconCls : "icon-edit",
		width:500,
		height:400,
		modal : true,
		href : "sys/user/user.jsp",
		onLoad:function(){
			//发送一个异步请求，加载数据
			$.post("sys/user_toedit.action",{"user.userId":selRow.userId},function(data){
				//转换数据
				var d = {};
				//foreach语法：
				// object：ｋｅｙ代表的是属性
				// array: 代表循环变量
				// string : 代表一个一个的字符
				for(var key in data){
					d["user."+key] = data[key];
					//如果属性是object类型
					if(typeof data[key] == "object"){
						for(var e in data[key]){
							d["user."+key+"."+e] = data[key][e];
						}
					}
				}
				//让表单显示数据
				$("#userForm").form("load",d);
			});
		},
		onClose:function(){$(this).dialog("destroy");},
		buttons:[{
			text : "确定",
			iconCls:"icon-ok",
			handler:function(){
				$("#userForm").form("submit",{
					url : "sys/user_edit.action",
					success:function(data){
						if(typeof data == "string"){
							data = eval("("+data+")");
						}
						if(data.result == true){
							d.dialog("close");
							$("#userList").datagrid("reload");
						}
					}
				});
			}
		},{
			text : "取消",
			iconCls:"icon-cancel",
			handler:function(){
				d.dialog("close");
			}
		}]
	});
}

